@model CrudUserProfileFuncionality.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Perfil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-12 mb-2">
            @Html.DisplayNameFor(model => model.Funcionalidades)
        </dt>
        @foreach (var funcionalidade in Model.Funcionalidades)
        {
            <dd class="col-sm-10">
                <span class="btn btn-dark">@funcionalidade.Text</span> - @funcionalidade.Value
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
